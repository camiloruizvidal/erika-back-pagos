DB_HOST=localhost
DB_PORT=5432
DB_USER=usuario
DB_PASSWORD=contrasena
DB_NAME=erika_pagos
DB_DIALECT=postgres
DB_LOGGING=false
PORT=3006
JWT_KEY=secret_jwt_key

# Llave privada de Woompi (se usa como Bearer token en las peticiones)
# Obtener desde el dashboard de Woompi en "Llaves del API" > "Llave privada"
WOOMPI_PRIVATE_KEY=tu_llave_privada_woompi_aqui

# Llave pública de Woompi (se usa para validaciones en el frontend)
# Obtener desde el dashboard de Woompi en "Llaves del API" > "Llave pública"
WOOMPI_PUBLIC_KEY=tu_llave_publica_woompi_aqui

# Secretos para integración técnica
# Secreto de Eventos (para webhooks y notificaciones)
# Obtener desde el dashboard de Woompi en "Secretos" > "Eventos"
WOOMPI_EVENTS_SECRET=tu_secreto_eventos_woompi_aqui

# Secreto de Integridad (para validar integridad de los datos)
# Obtener desde el dashboard de Woompi en "Secretos" > "Integridad"
WOOMPI_INTEGRITY_SECRET=tu_secreto_integridad_woompi_aqui

# URL de redirección después del pago exitoso
WOOMPI_REDIRECT_URL=https://erika.com/pago-exitoso

# URL base para links de pago fallback (si no se puede generar con Woompi)
PAGO_BASE_URL=https://pagar.erika.com

# Configuración Woompi (Bancolombia)
# URL base de la API de Woompi
WOOMPI_BASE_URL=https://api.woompi.com/v1